						<property name="xpath" value="${dcontent}" />
					</bean>
				</entry>
				<!-- 发布源 -->
				<entry key="dsource">
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="dsource" />
						<property name="xpath" value="${dsource}" />
					</bean>
				</entry>
				<!-- 图片链接 -->
				<entry key="dimg_url">
