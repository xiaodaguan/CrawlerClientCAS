<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<!-- 博客搜索站点公有配置 -->
	<bean id="person_search_${site}" class="common.siteinfo.Siteinfo">
		<property name="siteName" value="${siteName}" />
		<property name="siteFlag" value="${siteFlag}" />
		<property name="charset" value="${charset}" />
		<property name="downInterval" value="${downInterval}" />
		<property name="domainId" value="${domainId}" />
		<property name="page" value="${page}" />
		<property name="threadNum" value="${threadNum}" />
		<property name="agent" value="${agent}" />
		<property name="login" value="${login}" />
		<!-- 站点入口url -->
		<property name="url" value="${accessUrl}" />
		<!-- 站点的抽取组件，分为元数据、详细数据等类型 -->
		<property name="commonComponent">
			<map>
				<entry key="META" value-ref="meta_${site}_person_search" />
				<entry key="DATA" value-ref="data_${site}_person_search" />
			</map>
		</property>
	</bean>

	<!-- 元数据抽取组件 -->
	<bean id="meta_${site}_person_search" class="common.siteinfo.CommonComponent">
		<!-- 组件类型 -->
		<property name="type" value="META" />
		<!-- 组件包含的属性 -->
		<property name="components">
			<map>
				<!-- 人名 -->
				<entry key="title">
					<!-- 属性的相关信息，属性名，属性值，抽取值是否需要格式化，是否需要特殊处理(反射)，是否需要前缀，是否作为唯一字段 -->
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="title" />
						<property name="xpath" value="${title}" />
					</bean>
				</entry>

				<!-- URL -->
				<entry key="url">
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="url" />
						<property name="xpath" value="${url}" />
						<property name="prefix" value="${url_prefix}" />
					</bean>
				</entry>




			</map>
		</property>
	</bean>
	<bean id="data_${site}_person_search" class="common.siteinfo.CommonComponent">
		<!-- 组件类型 -->
		<property name="type" value="DATA" />
		<!-- 组件包含的属性 -->
		<property name="components">
			<map>

				<entry key="company">
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="company" />
						<property name="xpath" value="${company}" />
						<property name="format" value="true" />
					</bean>
				</entry>


				<entry key="position">
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="position" />
						<property name="xpath" value="${position}" />
						<property name="format" value="true" />
					</bean>
				</entry>

				<entry key="image">
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="image" />
						<property name="xpath" value="${image}" />
						<property name="format" value="true" />
					</bean>
				</entry>
				<entry key="sex">
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="sex" />
						<property name="xpath" value="${sex}" />
						<property name="format" value="true" />
					</bean>
				</entry>
				<entry key="brief">
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="brief" />
						<property name="xpath" value="${brief}" />
						<property name="format" value="true" />
					</bean>
				</entry>
				<entry key="nation">
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="nation" />
						<property name="xpath" value="${nation}" />
						<property name="format" value="true" />
					</bean>
				</entry>
				<entry key="nativePlace">
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="nativePlace" />
						<property name="xpath" value="${nativePlace}" />
						<property name="format" value="true" />
					</bean>
				</entry>
				<entry key="birthday">
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="birthday" />
						<property name="xpath" value="${birthday}" />
						<property name="format" value="true" />
					</bean>
				</entry>
				<entry key="politicalStatus">
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="politicalStatus" />
						<property name="xpath" value="${politicalStatus}" />
						<property name="format" value="true" />
					</bean>
				</entry>
				<entry key="school">
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="school" />
						<property name="xpath" value="${school}" />
						<property name="format" value="true" />
					</bean>
				</entry>
				<entry key="major">
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="major" />
						<property name="xpath" value="${major}" />
						<property name="format" value="true" />
					</bean>
				</entry>
				<entry key="educationBackground">
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="educationBackground" />
						<property name="xpath" value="${educationBackground}" />
						<property name="format" value="true" />
					</bean>
				</entry>
				<entry key="profession">
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="profession" />
						<property name="xpath" value="${profession}" />
						<property name="format" value="true" />
					</bean>
				</entry>
				<entry key="interest">
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="interest" />
						<property name="xpath" value="${interest}" />
						<property name="format" value="true" />
					</bean>
				</entry>
				<entry key="educationHistory">
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="educationHistory" />
						<property name="xpath" value="${educationHistory}" />
						<property name="format" value="true" />
					</bean>
				</entry>
				<entry key="workExperience">
					<bean class="common.siteinfo.Component">
						<property name="type" value="XPATH" />
						<property name="name" value="workExperience" />
						<property name="xpath" value="${workExperience}" />
						<property name="format" value="true" />
					</bean>
				</entry>

			</map>
		</property>
	</bean>
</beans>
