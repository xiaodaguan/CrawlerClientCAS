<?xml version="1.0" encoding="utf-8"?>
<site>
	<prop name="site" value="weixin"/>
	<prop name="siteName" value="weixin_weixin_search"/>
	<prop name="siteFlag" value="15"/>
	<prop name="charset" value="utf-8"/>

	<prop name="domainId" value="2"/>
	<prop name="agent" value="false"/>

	<prop name="downInterval" value="100"/>
	<prop name="page" value="10"/>
	<prop name="threadNum" value="1"/>
	<!-- <prop name="accessUrl" value="http://weixin.sogou.com/weixin?query=&lt;keyword&gt;&amp;type=2&amp;tsn=4"/> -->


	<prop name="accessUrl" value="http://weixin.sogou.com/weixin?type=2&amp;ie=utf8&amp;s_from=hotnews&amp;query=&lt;keyword&gt;"/>

	<!-- 列表页 -->
	<prop name="title" value="//DIV[@class='txt-box']/H3/A[contains(@id,'title_')]"/>
	<prop name="url" value="//DIV[@class='txt-box']/H3/A[contains(@id,'title_')]/@href"/>
	<prop name="brief" value="//DIV[@class='txt-box']/P[contains(@id,'summary_index')]"/>


	<prop name="next" value="//A[contains(@id,'next')]/@href"/>
	<prop name="next_prefix" value="http://weixin.sogou.com/weixin"/>

	<prop name="pubtime" value="//LI[contains(@id,'box_')]/DIV[@class='txt-box']/DIV[@class='s-p']/SPAN[@class='s2']"/>
	<!-- 内容页 -->
	<prop name="imgs_url" value="//DIV[@id='img-content']/DIV[@id='js_content']//IMG/@data-src"/>

	<prop name="content" value="//DIV[@id='img-content']/DIV[@id='js_content']//P"/>
	<prop name="author" value="//A[@id='post-user']"/>

	<prop name="source" value="//A[@id='post-user']"/>

	<prop name="read_num" value="//*[@id='sg_readNum3']/text()"/>
	<prop name="like_num" value="//*[@id='sg_likeNum3']/text()"/>

</site>