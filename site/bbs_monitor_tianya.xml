<?xml version="1.0" encoding="utf-8"?>
<site>
	<prop name="site" value="tianya" />
	<prop name="siteName" value="tianya_bbs_monitor" />
	<prop name="siteFlag" value="1" />
	<prop name="charset" value="utf-8" />
	<prop name="downInterval" value="3" />
	<prop name="page" value="2" />
	<prop name="threadNum" value="1" />
	
	<prop name="accessUrl" value="" />
<!-- 列表页 -->
	<prop name="title" value="(//TBODY/TR)[position() > 1]/TD[1]" />
	<prop name="url" value="(//TBODY/TR)[position() > 1]/TD[1]/A/@href" />
	<prop name="next" value="//A[contains(.,'下一页')]/@href" />
	<prop name="next_prefix" value="http://bbs.tianya.cn" />

	<prop name="author_l" value="(//TBODY/TR)[position() > 1]/TD[2]" />
	<prop name="reply_count_l" value="(//TBODY/TR)[position() > 1]/TD[3]" />
	<prop name="click_count_l" value="(//TBODY/TR)[position() > 1]/TD[4]" />

<!-- 内容页 -->
	
	<prop name="pubtime" value="(//DIV[@class='atl-info']/SPAN[contains(.,'时间')])[1]" />
	<prop name="content" value="//DIV[@class='bbs-content clearfix']" />
	<prop name="source" value="" />
	
	<prop name="column" value="//DIV[@class='atl-location clearfix']/P[@class='crumbs']/EM/A" />
	<prop name="img_url" value="" />
	
	<prop name="pageTitle" value="//SPAN[@class='s_title']" />
	<prop name="reply_content" value="//DIV[@class='atl-con-bd clearfix']/DIV[@class='bbs-content']" />
	<prop name="reply_time" value="//DIV[@class='atl-head']/DIV[@class='atl-info']/SPAN[2]" />
	<prop name="reply_name" value="//DIV[@class='atl-main']/DIV[@id]/DIV[@id]/DIV[@class='atl-info']/SPAN[1]" />
	<prop name="reply_next" value="(//A[contains(.,'下页')])[1]/@href" />
	<prop name="reply_next_prefix" value="http://bbs.tianya.cn" />
</site>
