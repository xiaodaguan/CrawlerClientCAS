<?xml version="1.0" encoding="utf-8"?>
<site>
	<prop name="site" value="baidu" />
	<prop name="siteName" value="baidu_news_search" />
	<prop name="siteFlag" value="1" />
	<prop name="charset" value="utf-8" />
	<prop name="downInterval" value="15" />
	<prop name="page" value="5" />
	<prop name="threadNum" value="1" />
	<prop name="accessUrl" value="http://news.baidu.com/ns?ie=utf-8&amp;sr=0&amp;cl=2&amp;rn=20&amp;tn=news&amp;ct=0&amp;clk=sortbytime&amp;word=&lt;keyword&gt;" />
<!-- 列表页 -->
	<prop name="title" value="//UL/LI/H3[contains(@class,'title')]/A" />
	<prop name="url" value="//UL/LI/H3[contains(@class,'title')]/A/@href" />
	<prop name="source" value="//UL/LI/DIV//P[@class='c-author']" />
	<prop name="next" value="//P[@id='page']/A[contains(.,'下一页')]/@href" />
	<prop name="pubtime" value="//UL/LI/DIV//P[@class='c-author']" />
	
	<prop name="brief" value="//DIV[contains(@class,'summary')]" />
	<prop name="keyword" value="//INPUT[@id='kw']/@value" />
	
	<prop name="refer_num" value="//SPAN[@class='nums']" />
	<prop name="same_num" value="]/DIV[contains(@class,'summary')]/A[contains(.,'相同')]" />
	<prop name="same_url" value="]/DIV[contains(@class,'summary')]/A[contains(.,'相同')]/@href" />
	<prop name="cache" value="//A[contains(.,'百度快照')]/@href" />
	
	<prop name="next_prefix" value="http://news.baidu.com" />
	
</site>